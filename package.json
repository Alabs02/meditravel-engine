{
  "name": "meditravel-engine",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "Usman Alabura",
    "email": "usmanunfolds@alabura.com",
    "url": "https://alabura.com"
  },
  "private": true,
  "license": "UNLICENSED",
  "main": "src/main.ts",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "inject": "tsx scripts/copy-public.script.ts",
    "dev": "concurrently -c \"cyan,blue\" \"pnpm nest start --watch\" \"pnpm inject\"",
    "debug": "nest start --debug --watch",
    "start": "npx pnpm inject && node dist/src/main.js",
    "start:dev": "concurrently -c \"cyan,blue\" \"pnpm nest start\" \"pnpm inject\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.1.6",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.6.0",
    "dotenv": "^16.5.0",
    "firebase-admin": "^13.3.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.1",
    "mongoose-autopopulate": "^1.1.0",
    "mongoose-delete": "^1.0.2",
    "multer": "1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.7.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/mongoose-delete": "^1.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "module-alias": "^2.2.3",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "_moduleAliases": {
    "@": "dist/src",
    "@core": "dist/src/core",
    "@shared": "dist/src/shared",
    "@role": "dist/src/modules/role",
    "@admin": "dist/src/modules/admin",
    "@audit": "dist/src/modules/audit",
    "@user": "dist/src/modules/user",
    "@clinic": "dist/src/modules/clinic",
    "@auth": "dist/src/modules/auth",
    "@database": "dist/src/modules/database",
    "@modules": "dist/src/modules",
    "@config": "dist/src/config"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1",
      "@auth/(.*)$": "<rootDir>/auth/modules/$1",
      "@core/(.*)$": "<rootDir>/core/$1",
      "@shared/(.*)$": "<rootDir>/shared/$1",
      "@role/(.*)$": "<rootDir>/modules/role/$1",
      "@admin/(.*)$": "<rootDir>/modules/admin/$1",
      "@audit/(.*)$": "<rootDir>/modules/audit/$1",
      "@user/(.*)$": "<rootDir>/modules/user/$1",
      "@clinic/(.*)$": "<rootDir>/modules/clinic/$1",
      "@database/(.*)$": "<rootDir>/modules/database/$1",
      "@config/(.*)$": "<rootDir>/config/$1",
      "@modules/(.*)$": "<rootDir>/modules/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}